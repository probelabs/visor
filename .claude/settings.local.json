{
  "permissions": {
    "allow": [
      "Bash(npx -y @probelabs/vow@latest:*)",
      "Bash(npx -y @probelabs/vow@latest consent:*)",
      "Bash(npx -y @probelabs/vow@latest rules:*)",
      "Bash(npm init:*)",
      "Bash(npm install:*)",
      "WebSearch",
      "Bash(npm run build:*)",
      "Bash(npm test)",
      "WebFetch(domain:github.com)",
      "Bash(npm test:*)",
      "Bash(npx:*)",
      "Bash(./dist/cli-main.js --help)",
      "mcp__code-search__search_code",
      "mcp__code-search__extract_code",
      "Bash(chmod:*)",
      "Bash(./dist/cli-main.js --check style --output table)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(npm run lint:*)",
      "Bash(find:*)",
      "Bash(git commit:*)",
      "Bash(./dist/cli-main.js --check security --output json)",
      "Bash(CI=true npm test -- --passWithNoTests --testNamePattern=\"(Stress Testing|Memory Leak|Resource Cleanup|Performance Benchmark)\" --verbose)",
      "Bash(CI=true npm test -- --testNamePattern=\"(Stress Testing|Memory Leak|Resource Cleanup|Performance Benchmark)\" --passWithNoTests)",
      "Bash(CI=true timeout 30 npm test -- --selectProjects='' --testTimeout=5000 --detectOpenHandles --forceExit)",
      "Bash(CI=true timeout 60 npm test -- --maxWorkers=2 --testTimeout=10000)",
      "Bash(CI=true npm test -- --verbose --passWithNoTests)",
      "Bash(node dist/src/cli-main.js --help)",
      "Bash(node dist/cli-main.js --help)",
      "Bash(node dist/cli-main.js --check performance --output summary)",
      "Bash(node:*)",
      "Bash(gh pr:*)",
      "Bash(/usr/bin/npm run build)",
      "Read(//usr/local/bin/**)",
      "Bash(pacman:*)",
      "Bash(git restore:*)",
      "Bash(git config:*)",
      "Bash(git push:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh api:*)",
      "Bash(sed:*)",
      "Bash(mkdir:*)",
      "Bash(xargs sed:*)",
      "Bash(xargs:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx @probelabs/vow check --hook --hook-type=PreToolUseGit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx @probelabs/vow check --hook --hook-type=Stop"
          }
        ]
      }
    ]
  }
}