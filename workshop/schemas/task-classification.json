{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Visor Task Classification",
  "type": "object",
  "required": ["intent", "components"],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["feature", "bugfix", "refactor", "docs", "chore"],
      "description": "Overall intent of the task"
    },
    "summary": { "type": "string" },
    "labels": {
      "type": "array",
      "items": { "type": "string" }
    },
    "risks": {
      "type": "array",
      "items": { "type": "string" }
    },
    "recommended_checks": {
      "type": "array",
      "items": { "type": "string", "enum": ["security", "performance", "quality", "style", "docs"] }
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path"],
        "properties": {
          "name": { "type": "string" },
          "path": { "type": "string" },
          "reason": { "type": "string" },
          "checks": {
            "type": "array",
            "items": { "type": "string", "enum": ["security", "performance", "quality", "style", "docs"] }
          },
          "priority": { "type": "string", "enum": ["low", "medium", "high"] }
        }
      }
    }
  }
}

