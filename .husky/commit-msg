#!/usr/bin/env sh
# Validate commit message format
# Conventional Commits format: type(scope): description
commit_regex='^(feat|fix|docs|style|refactor|test|chore|ci|build|perf)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message should follow Conventional Commits format:"
  echo "  type(scope): description"
  echo ""
  echo "Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf"
  echo "Example: feat(auth): add user authentication"
  echo "Example: fix: resolve memory leak in PR analyzer"
  echo ""
  exit 1
fi

echo "✅ Commit message format is valid!"