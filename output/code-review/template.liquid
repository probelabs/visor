### {{ checkName | capitalize }} Issues ({{ issues.size }})
<table>
  <thead>
    <tr>
      <th>Severity</th>
      <th>Location</th>
      <th>Issue</th>
    </tr>
  </thead>
  <tbody>
{%- assign sorted_issues = issues | sort: 'severity' -%}
{%- for issue in sorted_issues -%}
    <tr>
      <td>{%- case issue.severity -%}
{%- when 'critical' -%}🔴 Critical{%- when 'error' -%}🟠 Error{%- when 'warning' -%}🟡 Warning{%- when 'info' -%}🟢 Info{%- else -%}📝 {{ issue.severity | capitalize | escape }}{%- endcase -%}</td>
      <td>{%- if issue.githubUrl -%}<a href="{{ issue.githubUrl }}"><code>{{ issue.file | escape }}:{{ issue.line }}{%- if issue.endLine and issue.endLine != issue.line -%}-{{ issue.endLine }}{%- endif -%}</code></a>{%- else -%}<code>{{ issue.file | escape }}:{{ issue.line }}{%- if issue.endLine and issue.endLine != issue.line -%}-{{ issue.endLine }}{%- endif -%}</code>{%- endif -%}</td>
      <td><div>{{ issue.message | escape }}{%- if issue.suggestion -%}
        <details><summary>💡 <strong>Suggestion</strong></summary>{{ issue.suggestion | escape }}</details>
{%- endif -%}
{%- if issue.replacement -%}
        <details><summary>🔧 <strong>Suggested Fix</strong></summary><pre><code>{{ issue.replacement | escape }}</code></pre></details>
{%- endif -%}</div></td>
    </tr>
{%- endfor -%}
  </tbody>
</table>